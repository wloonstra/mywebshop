<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:web="http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
	version="2.4">

    <description></description>
    <display-name>MyWebShop</display-name>
    
    <servlet>
        <servlet-name>home</servlet-name>
        <servlet-class>nl.hackexample.servlet.HomeServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>maliciousUpdate</servlet-name>
        <servlet-class>nl.hackexample.servlet.MaliciousUpdateServlet</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>stealLoginFromCookie</servlet-name>
        <servlet-class>nl.hackexample.servlet.StealLoginFromCookieServlet</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>home</servlet-name>
        <url-pattern>/home</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>maliciousUpdate</servlet-name>
        <url-pattern>/maliciousUpdate</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>stealLoginFromCookie<servlet-name>
        <url-pattern>/stealLoginFromCookie</url-pattern>
    </servlet-mapping>

    
</web-app>
